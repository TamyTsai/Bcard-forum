<div class="bgc-dark-blue h-screen">
  <div class="div-all-center">
    <section class="columns mt-20">
      <!-- 左半 -->
      <secttion class="column py-28 mx-6">
        <p class="text-white text-3xl font-bold text-center mb-1">年輕人都在 Dcard 上討論</p>
        <p class="text-gray-400 text-center text-2xl">不想錯過任何有趣的話題嗎？<br>趕快加入我們吧!</p>
      </secttion>
      <!-- 右半 -->
      <secttion class="column">
        <div class="bg-white w-96 rounded-xl p-10">
          <h2 class="text-3xl font-semibold text-center mb-3">密碼重設驗證信</h2>
    
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
    
            <div class="field justify-center items-center">
              <%= f.label :email, '請輸入你的常用信箱/學校信箱', class:'font-bold' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input mt-2 mb-3' %>
            </div>

            <div class="actions">
              <%= f.submit "寄送重設密碼指示", class:'button w-full bgc-medium-blue text-white' %>
            </div>
          <% end %>
    
          <!-- <%= render "devise/shared/links" %> -->
        </div>
      </secttion>
    </section>
  </div>
</div>

